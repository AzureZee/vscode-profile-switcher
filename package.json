{
  "name": "vscode-profile-switcher",
  "displayName": "VSCode Profile Switcher",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Profile Switcher",
        "properties": {
          "profileSwitcher.rules": {
            "type": "array",
            "scope": "application",
            "items": {
              "type": "object",
              "properties": {
                "profile": {
                  "type": "string",
                  "default": "",
                  "description": "your profile name"
                },
                "folders": {
                  "type": "array",
                  "default": [],
                  "description": "Specify some folders,\nAnd any subfolders opened under the specified folders,\nWill use the specified profile.",
                  "items": {
                    "type": "string",
                    "default": ""
                  }
                },
                "pattern": {
                  "type": "object",
                  "default": {
                    "include": "",
                    "exclude": ""
                  },
                  "required": [
                    "include"
                  ],
                  "properties": {
                    "include": {
                      "type": "string",
                      "default": ""
                    },
                    "exclude": {
                      "type": "string",
                      "default": ""
                    }
                  }
                },
                "fileExts": {
                  "type": "array",
                  "default": [],
                  "items": {
                    "type": "string",
                    "default": ""
                  }
                }
              },
              "additionalProperties": false,
              "required": [
                "profile"
              ]
            }
          }
        }
      }
    ],
    "commands": [
      {
        "command": "profileSwitcher.generateTemplate",
        "title": "Generate configuration template",
        "category": "ProfileSwitcher"
      },
      {
        "command": "profileSwitcher.reloadConfig",
        "title": "Reload configuration",
        "category": "ProfileSwitcher"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
